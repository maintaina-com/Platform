{
    "name": "horde/platform",
    "description": "OO interface to detecting Linux/Windows platform and running external commands.",
    "type": "library",
    "require": {
        "php": "^8.1 || ^9",
        "psr/log": "^1 || ^2 || ^3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Horde\\Platform\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ralf Lang",
            "email": "ralf.lang@ralf-lang.de"
        }
    ],
    "require-dev": {
        "horde/test": "^3",
        "phpunit/phpunit": "^9 || ^10"
    },
    "suggest": {
    },
    "autoload-dev": {
        "psr-4": {
            "Horde\\Platform\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "horde/horde-installer-plugin": true
        }
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "https://horde-satis.maintaina.com"
        }
    ]
}
